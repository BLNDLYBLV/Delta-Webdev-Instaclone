<%- include('partials/header') %> 

<div class="container" style="overflow: hidden; margin-top: 30px;background-color: white;">
    <%= typeof msg != 'undefined' ? msg : '' %>
    <div class="row">
        <div class="col-3" style="border: 1px solid rgba(0,0,0,0.1);">
            <form action="/account/edit" method="GET">
                <button style="background-color: white;border: none;position: relative;left: -15px;top: 15px; padding: 10px; border-left: 3px solid black;padding-left: 40px;">    
                    <div >
                        Edit profile
                    </div>
                </button>
            </form>
            <form action="/account/password" method="GET">
                <!-- <button  style="position: relative;left: -20px; padding: 10px;padding-left: 50px; margin-bottom: 15px;  background-color: white;border: none;"></button>     -->
                <button style="border: none;margin-bottom: 15px;background-color: white; padding: 10px;padding-left: 43px;margin-left: -15px; margin-top: 20px;">   
                Change password
                </button>
            </form>
        </div>
        <div class="col-9 row" style="border-top: 1px solid rgba(0,0,0,0.1);border-right: 1px solid rgba(0,0,0,0.1);border-bottom: 1px solid rgba(0,0,0,0.1);position: relative; left: -1px;">
            <div class="col-4" style="margin-top: 20px;">
                <div style="padding-left: 100px;padding-right: 50px;width: 100%;text-align: right;   margin-right: 50px;margin-bottom: 24px; " >Username:</div>
                <div style="padding-left: 100px;width: 100%; text-align: right; padding-right: 50px; margin-right: 50px;margin-bottom: 24px; " >bio:</div>
                <div style="padding-left: 100px;width: 100%; text-align: right; padding-right: 50px; margin-right: 50px;margin-bottom: 24px; " >email:</div>                                
            </div>
            <div class="col-8" style="margin-top: 20px;margin-bottom: 20px;">
                <form action="/account/edit" method="POST">
                    <input type="text" value="<%= user.username %>" style="padding: 4px; margin-bottom: 10px; border: 1px solid rgba(0,0,0,0.3); border-radius: 3px;" name="username" id="">
                    <br>
                    <input type="text" value="<%= user.bio %>" style="padding: 4px; margin-bottom: 10px; border: 1px solid rgba(0,0,0,0.3); border-radius: 3px;"  name="bio">
                    <br>
                    <input type="email" value="<%= user.email %>"  style="padding: 4px; margin-bottom: 10px; border: 1px solid rgba(0,0,0,0.3); border-radius: 3px;" name="email">
                    <button class="btn-success" style="margin-top: 10px ;border: none;padding: 4px; display: block;margin-left: auto;position: relative; right: 330px;">
                        Submit
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %> 
